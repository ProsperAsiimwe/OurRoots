@model OurRoots.WebUI.Models.Orders.OrderViewModel


<!-- Section: inner-header -->
<section class="inner-header divider parallax layer-overlay overlay-dark-5" data-bg-img="@Url.Content("~/Content/assets/images/bg/bg1.jpg")">
    <div class="container pt-90 pb-50">
        <!-- Section Content -->
        <div class="section-content pt-100">
            <div class="row">
                <div class="col-md-12">
                    <h3 class="title text-white">Check out now</h3>

                </div>
            </div>
        </div>
    </div>
</section>

<section>
    <div class="container">
        <div class="section-content">
            <div class="row mt-30">
                @*<form id="checkout-form" action="#">*@
                    <div class="col-md-12">
                        <div class="billing-details">
                            <h4 class="mt-0 mb-30 line-bottom">Please enter your details, and we'll ship your order immediately!</h4>
                          
                            <div class="row">

                                @using (Html.BeginForm("Checkout", "Cart", FormMethod.Post, new { id = "contact_form", name = "contact_form"}))
                                {
                                    @Html.AntiForgeryToken()
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                                    <div class="row">

                                        <div class="col-sm-6">
                                            <div class="form-group">

                                                @Html.Bootstrap().TextBoxFor(m => m.Name).Placeholder("Name").ShowValidationMessage(true).HtmlAttributes(new { @class = "form-control", type = "text", required = "" })
                                                @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })

                                            </div>
                                        </div>
                                        <div class="col-sm-6">
                                            <div class="form-group">
                                                @Html.Bootstrap().TextBoxFor(m => m.Email).Placeholder("Email").ShowValidationMessage(true).HtmlAttributes(new { @class = "form-control", type = "text", required = "" })
                                                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                                            </div>
                                        </div>

                                    </div>

                                    <div class="row">

                                        <div class="col-sm-6">
                                            <div class="form-group">

                                                @Html.Bootstrap().TextBoxFor(m => m.Phone).Placeholder("Phone No.").ShowValidationMessage(true).HtmlAttributes(new { @class = "form-control", type = "text", required = "" })
                                                @Html.ValidationMessageFor(m => m.Phone, "", new { @class = "text-danger" })

                                            </div>
                                        </div>
                                        <div class="col-sm-6">
                                            <div class="form-group">
                                                @Html.Bootstrap().TextBoxFor(m => m.Line1).Placeholder("Address").ShowValidationMessage(true).HtmlAttributes(new { @class = "form-control", type = "text", required = "" })
                                                @Html.ValidationMessageFor(m => m.Line1, "", new { @class = "text-danger" })
                                            </div>
                                        </div>

                                    </div>


                                    <div class="row">

                                        <div class="col-sm-6">
                                            <div class="form-group">

                                                @Html.Bootstrap().TextBoxFor(m => m.Line2).Placeholder("Please provide more address details").ShowValidationMessage(true).HtmlAttributes(new { @class = "form-control", type = "text", required = "" })
                                                @Html.ValidationMessageFor(m => m.Line2, "", new { @class = "text-danger" })

                                            </div>
                                        </div>
                                        <div class="col-sm-6">
                                            <div class="form-group">
                                                @Html.Bootstrap().TextBoxFor(m => m.Line3).Placeholder("Country").ShowValidationMessage(true).HtmlAttributes(new { @class = "form-control", type = "text", required = "" })
                                                @Html.ValidationMessageFor(m => m.Line3, "", new { @class = "text-danger" })
                                            </div>
                                        </div>

                                    </div>



                                    <div class="row">

                                        <div class="col-sm-6">
                                            <div class="form-group">

                                                @Html.Bootstrap().TextBoxFor(m => m.City).Placeholder("City").ShowValidationMessage(true).HtmlAttributes(new { @class = "form-control", type = "text", required = "" })
                                                @Html.ValidationMessageFor(m => m.City, "", new { @class = "text-danger" })

                                            </div>
                                        </div>
                                        <div class="col-sm-6">
                                            <div class="form-group">
                                                @Html.Bootstrap().TextBoxFor(m => m.Zip).Placeholder("Zip").ShowValidationMessage(true).HtmlAttributes(new { @class = "form-control", type = "text"})
                                                @Html.ValidationMessageFor(m => m.Zip, "", new { @class = "text-danger" })
                                            </div>
                                        </div>

                                    </div>



                                    <div class="form-group">
                                        @Html.Bootstrap().SubmitButton().Class("btn btn-primary").Text("Place Order")                                      
                                        <button type="reset" class="btn btn-default btn-flat btn-theme-colored">Reset</button>
                                    </div>

                                }



                             
                            </div>
                        </div>
                    </div>
                   
                  
                    @*<div class="col-md-12">
                        <div class="text-right"> <a class="btn btn-default">Place Order</a> </div>
                    </div>*@


                @*</form>*@
            </div>
        </div>
    </div>
</section>

